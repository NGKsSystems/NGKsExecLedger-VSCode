{
  "name": "ngks-autologger",
  "displayName": "NGKs Autonomous Logger",
  "description": "Autonomous VS Code operation logger (Phase 1: session + JSONL writer + autosave proof copy).",
  "version": "0.1.0",
  "publisher": "ngks-systems",
  "engines": { "vscode": "^1.90.0" },
  "categories": ["Other"],
  "activationEvents": ["*"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      { "command": "ngksAutologger.startSession", "title": "NGKs: Start Logging Session" },
      { "command": "ngksAutologger.stopSession", "title": "NGKs: Stop Logging Session" }
    ],
    "configuration": {
      "title": "NGKs Autonomous Logger",
      "properties": {
        "ngksAutologger.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable NGKs logging automatically on VS Code startup."
        },
        "ngksAutologger.logRootMode": {
          "type": "string",
          "enum": ["workspace", "global"],
          "default": "workspace",
          "description": "Where to store logs. 'workspace' writes under .ngks/logs. 'global' writes under the user's AppData."
        },
        "ngksAutologger.autosaveToDownloads": {
          "type": "boolean",
          "default": true,
          "description": "Copy a proof artifact to Downloads on session end."
        },
        "ngksAutologger.appName": {
          "type": "string",
          "default": "VSCodeAutoLogger",
          "description": "Folder name used under Downloads\\NGKsLogs\\<appName> for proof copies."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "uuid": "^10.0.0"
  }
}
